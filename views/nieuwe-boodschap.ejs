<% include header %>

<h2 class="bericht">Een nieuw bericht toevoegen</h2>
<form method="post" role="form">
  <div class="form-group">
    <label for="titel">Onderwerp</label>
    <input type="text" class="form-control" id="titel" name="titel" placeholder="Geef het onderwerp van je bericht aan." required>
  </div>
  <div class="form-group">
    <label for="boodschap">Bericht</label>
    <textarea class="form-control" id="boodschap" name="boodschap" placeholder="Schrijf hier je bericht." rows="3" required></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="Bericht verzenden" class="btn btn-primary" id='button'>
  </div>
</form>

<% include footer %>
